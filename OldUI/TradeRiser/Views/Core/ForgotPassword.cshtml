 @using TradeRiser.UI
@using TradeRiser.UI.Controls
<section id="forgot-password-section"  class="form-horizontal form-label-left">
    <div class="logon-label">
        <h2>@TradeRiserUIResource.ForgotPasswordTitle</h2>
    </div>
        <div class="form-group">
            <label class="control-label" for="username-or-email">@TradeRiserUIResource.UsernameOrEmail@Html.ValidationControl("username-or-email", true)</label>
            <div>
            <input name="username-or-email" id="username-or-email" type="text" class="form-control" autocomplete="off" @Html.ValidationAttributes(new ValidationAttributes() {Required = true})/>
        </div>
    </div>
@*    <div id="forgot-password-alert" class="alert">
        <div class="alert-body">
            <div class="closebutton-wrapper" style="display: inline-block"><span class="fa fa-fw fa-remove">[x]</span></div>
        </div>
    </div>*@

    <div id="forgot-button-section" class="form-group">
        <button id="back-password" class="btn btn-default submit pull-left" style="display: none;">@TradeRiserUIResource.Back</button>
        <button id="cancel-password" class="btn btn-default submit pull-left" style="display: none;">@TradeRiserUIResource.Cancel</button>
        <button id="submit-forgot-password" class="btn btn-default submit pull-right" name="submit-forgot-password" style="display: none;">@TradeRiserUIResource.Submit</button>
    </div>
</section>